<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme (Dark) -->
    <style name="Theme.OpenCode" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>

        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/accent</item>
        <item name="colorOnTertiary">@color/text_on_primary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_dark</item>
        <item name="colorOnErrorContainer">@color/white</item>

        <!-- Outline -->
        <item name="colorOutline">@color/divider</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Window -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Text Appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Component Styles -->
        <item name="materialCardViewStyle">@style/Widget.OpenCode.CardView</item>
        <item name="floatingActionButtonStyle">@style/Widget.OpenCode.FAB</item>
        <item name="textInputStyle">@style/Widget.OpenCode.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.OpenCode.BottomNavigation</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.OpenCode.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorTertiary">@color/accent</item>
        <item name="colorOnTertiary">@color/white</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorSurfaceVariant">@color/surface_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:statusBarColor">@color/status_bar_light</item>
        <item name="android:navigationBarColor">@color/navigation_bar_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Card View Style -->
    <style name="Widget.OpenCode.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.OpenCode.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="Widget.OpenCode.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.OpenCode.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.OpenCode.BottomNavigation.ActiveIndicator</item>
    </style>

    <style name="Widget.OpenCode.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary</item>
    </style>

    <!-- Navigation Drawer Style -->
    <style name="Widget.OpenCode.NavigationDrawer" parent="Widget.MaterialComponents.NavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/nav_drawer_item_color</item>
        <item name="itemTextColor">@color/nav_drawer_item_color</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.OpenCode.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/surface</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.OpenCode.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.OpenCode.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.OpenCode.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Chat Bubble Styles -->
    <style name="Widget.OpenCode.ChatBubble" parent="">
        <item name="android:padding">12dp</item>
        <item name="android:maxWidth">280dp</item>
    </style>

    <style name="Widget.OpenCode.ChatBubble.User" parent="Widget.OpenCode.ChatBubble">
        <item name="android:background">@drawable/bg_bubble_user</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="Widget.OpenCode.ChatBubble.Assistant" parent="Widget.OpenCode.ChatBubble">
        <item name="android:background">@drawable/bg_bubble_assistant</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.OpenCode.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.OpenCode.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.OpenCode.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.OpenCode.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.OpenCode.Code" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:background">@color/code_background</item>
    </style>

    <style name="TextAppearance.OpenCode.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Dialog Style -->
    <style name="Theme.OpenCode.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.OpenCode.Button.Text</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.OpenCode.Button.Text</item>
    </style>

    <!-- Bottom Sheet Style -->
    <style name="Theme.OpenCode.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.OpenCode.BottomSheet</item>
    </style>

    <style name="Widget.OpenCode.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/surface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.OpenCode.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.OpenCode.BottomSheet" parent="ShapeAppearance.Material3.Corner.ExtraLarge">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>
